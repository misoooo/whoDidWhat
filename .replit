modules = ["nodejs-20"]
run = "cd client && npm run dev"
[nix]
channel = "stable-25_05"
packages = ["csound"]

[deployment]
run = ["sh", "-c", "cd client && npm run dev"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5173
externalPort = 5173
exposeLocalhost = true

[[ports]]
localPort = 5175
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 5176
externalPort = 3000
exposeLocalhost = true

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npm run dev"

[workflows.workflow.metadata]
outputType = "console"
